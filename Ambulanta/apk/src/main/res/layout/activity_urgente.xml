<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutAddrUpdate"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.sda.ambulanta.apk.UrgenteActivity">

    <ProgressBar
        android:id="@+id/progressBar_AddrUpdate"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:id="@+id/AddrUpdateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:focusableInTouchMode="true">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date primite de la pacient : "
                android:textColor="@color/pink"
                android:layout_marginBottom="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/pulsURG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Puls..."
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/constientURG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Constient..."
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/stabilURG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Stabil..."
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/temperaturaURG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Temperatura..."
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tensiuneURG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tensiune..."
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/otherURG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Altele..."
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/AnulareTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-----Motivul anularii----- "
                android:textColor="@color/pink"
                android:layout_marginBottom="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/cancelReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Detalii..."
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/sendinfoUrgBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn_color_sos"
                android:color="#f8fdf9"
                android:text="Trimite"
                android:textAppearance="@style/CalcResultStyle1" />
            <Button
                android:id="@+id/showinfopacientBTN"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_color_sos"
                android:color="#f8fdf9"
                android:text="Informatii \n Pacient"
                android:textAppearance="@style/CalcResultStyle1" />
            <Button
                android:id="@+id/cancelUrgBTN"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_color_sos"
                android:color="#f8fdf9"
                android:text="Anulare \n urgenta"
                android:textAppearance="@style/CalcResultStyle1" />
        </TableRow>
    </TableLayout>


</RelativeLayout>
